<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--I can use use either Constraint or horizontal Linear,
    in this layout I decided to go for a simple LinearLayout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_root"
        android:paddingTop="@dimen/list_padding_top"
        android:paddingBottom="@dimen/list_padding_top"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/shoe_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/list_scroll_margin_start"
            android:layout_marginEnd="@dimen/list_scroll_margin_start"
            android:textSize="@dimen/list_shoe_name_text_size"
            tools:text="Samara Bootie"
            android:textStyle="bold"/>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/colorGray"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/designer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/list_scroll_margin_start"
            android:textSize="@dimen/list_shoe_company_text_size"
            tools:text="Journee Collection"/>

    </LinearLayout>

</layout>